<h1>Listing features</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @features.each do |feature| %>
  <tr>
    <td><%= feature.name %></td>
    <td><%= link_to 'Show', [feature.developer, feature] %></td>
    <td><%= link_to 'Edit', edit_developer_feature_path(feature.developer, feature) %></td>
    <td><%= link_to 'Destroy', [feature.developer, feature], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Feature', new_developer_feature_path(params[:developer_id]) %>
