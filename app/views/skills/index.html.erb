<h1>Listing skills</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @skills.each do |skill| %>
  <tr>
    <td><%= skill.name %></td>
    <td><%= link_to 'Show', [skill.developer, skill] %></td>
    <td><%= link_to 'Edit', edit_developer_skill_path(skill.developer, skill) %></td>
    <td><%= link_to 'Destroy', [skill.developer, skill], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Skill', new_developer_skill_path(params[:developer_id]) %>
